#!/bin/bash

# Setup the legacyhalos project

echo "Loading legacyhalos project"

source $IMPY_DIR/bin/legacypipe-env-nersc

export LEGACYHALOS_DIR=/project/projectdirs/desi/users/ioannis/legacyhalos
export LEGACYHALOS_DATA_DIR=/project/projectdirs/desi/users/ioannis/legacyhalos-data
export LEGACYHALOS_HTML_DIR=/global/project/projectdirs/cosmo/www/temp/ioannis/legacyhalos-html
export LEGACYHALOS_CODE_DIR=$HOME/repos/git/legacyhalos

export LEGACYLSBS_DIR=${LEGACYHALOS_DIR} # temporary
export LEGACYLSBS_DATA_DIR=/project/projectdirs/desi/users/ioannis/legacylsbs-data

export HSC_DIR=${LEGACYHALOS_DIR} # temporary
export HSC_DATA_DIR=/project/projectdirs/desi/users/ioannis/hsc-data
export HSC_HTML_DIR=/global/project/projectdirs/cosmo/www/temp/ioannis/hsc-html

export REDMAPPER_DIR=/project/projectdirs/desi/users/ioannis/redmapper
# export SPS_HOME=$SCRATCH/fsps

export PATH=$LEGACYHALOS_CODE_DIR/bin:$PATH
export PATH=/global/cscratch1/sd/ioannis/repos/build/$NERSC_HOST/bin:$PATH

export PYTHONPATH=$LEGACYHALOS_CODE_DIR/py:$PYTHONPATH
#export PYTHONPATH=$HOME/repos/git/mge_2017_07_28:$PYTHONPATH
export PYTHONPATH=$HOME/repos/build/$NERSC_HOST/lib/python3.6/site-packages:$PYTHONPATH
export PYTHONPATH=$UNWISE_PSF_DIR/py:$PYTHONPATH

echo '$LEGACYHALOS_DIR='$LEGACYHALOS_DIR
echo '$LEGACYHALOS_DATA_DIR='$LEGACYHALOS_DATA_DIR
echo '$LEGACYHALOS_HTML_DIR='$LEGACYHALOS_HTML_DIR
echo '$LEGACYHALOS_CODE_DIR='$LEGACYHALOS_CODE_DIR
